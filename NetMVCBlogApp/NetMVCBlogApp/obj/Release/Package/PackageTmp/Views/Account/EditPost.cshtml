@model NetMVCBlogApp.Entity.Post
@{
    ViewBag.Title = "EditPost";
    Layout = "~/Views/Shared/admin.cshtml";
}


<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="card">
            <div class="header">
                <h4 class="title">Edit Post</h4>
            </div>
            <div class="content">

                @using (Html.BeginForm(FormMethod.Post))
                {

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, "Post Name", new { @class = "form -control" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Post Name" })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Text, new { @class = "form-control ckeditor", placeholder = "Here can be your post content", rows = 20 })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-1">
                            @Html.LabelFor(model => model.CategoryID, "Category Name", new { @class = "form -control" })
                            @Html.DropDownList("CategoryID", null, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-1">
                            <div class="custom-control custom-checkbox">
                                @Html.CheckBoxFor(model => model.isValid, new { @class = "custom-control-input" })
                                <label class="custom-control-label" for="isValid">on the homepage?</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-10 col-md-offset-1">
                        <button type="submit" class="btn btn-info btn-fill pull-right" id="create-post">Edit post</button>
                    </div>
                    <div class="clearfix"></div>
                }

            </div>
        </div>
    </div>
</div>
