@model NetMVCBlogApp.Entity.Admin
@{
    Layout = "~/Views/Shared/admin.cshtml";
    string imageData = Model.Image != null ? Convert.ToBase64String(Model.Image): "#";
}

@using (Html.BeginForm("User", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Edit Profile</h4>
                    </div>
                    <div class="content">

                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.AddedDate)
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label>Author (disabled)</label>
                                    <input type="text" class="form-control" disabled="" placeholder="Company" value="Yusuf Yılmaz">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Username)
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Username", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Mail)
                                    @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "Mail", type = "email", required = "required" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name)
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name", required = "required" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LastName)
                                    @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = "LastName", required = "required" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ShortDescription)
                                    @Html.TextAreaFor(model => model.ShortDescription, new { @class = "form-control", placeholder = "ShortDescription", required = "required" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.AboutMe)
                                    @Html.TextAreaFor(model => model.AboutMe, new { @class = "form-control", placeholder = "AboutMe", required = "required", rows = 8 })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info btn-fill pull-right" id="send">Update Profile</button>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card card-user">
                    <div class="image">
                        <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&amp;fm=jpg&amp;h=300&amp;q=75&amp;w=400" alt="...">
                    </div>
                    <div class="content">
                        <div class="author">
                            <img class="avatar border-gray" src="data:image/jpeg;base64,@imageData" alt="...">

                            <h4 class="title">
                                @(Model.Name + " " + Model.LastName)<br>
                                <small>@Model.Username</small>
                            </h4>
                        </div>
                        <p class="description text-center">
                            @Model.ShortDescription
                        </p>
                    </div>
                    <hr>
                    <div class="text-center">
                        <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-twitter"></i></button>
                        <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square"></i></button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <label for="uploadPhoto">Upload a admin image</label>
                        <input type="file" name="uploadPhoto" id="uploadPhoto" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
