@model IEnumerable<NetMVCBlogApp.Entity.Category>
@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<a href="/Account/NewCategorie" class="btn" style="border:3px solid #9772D9; margin-bottom:20px">Create new categorie</a>

<div class="card">
    <div class="header">
        <h4 class="title">Recent comments</h4>
        <p class="category"> You can delete and update blogs from the right side.</p>
    </div>
    <div class="content table-responsive table-full-width">
        <table class="table table-hover table-striped">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th style="width:80px;">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.ID</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td class="td-actions text-right" style="display:flex; justify-content:flex-start">
                            <a href="/Account/EditCategorie/@category.ID" type="button" rel="tooltip" title="" class="btn btn-info btn-simple btn-sm" data-original-title="Edit Task">
                                <i class="fa fa-edit"></i>
                            </a>
                                <a href="/Account/DeleteCategorie/@category.ID" rel="tooltip" title="" class="btn btn-danger btn-simple btn-sm" data-original-title="Remove">
                                    <i id="1" class="deleteBlog fa fa-times"></i>
                                </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

