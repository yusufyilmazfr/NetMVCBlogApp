@model NetMVCBlogApp.Entity.Category
@{
    ViewBag.Title = "DeleteCategorie";
    Layout = "~/Views/Shared/admin.cshtml";
}



<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <div class="card" style="text-align:center">
            <div class="header">
                <h4 class="title">Are you sure?</h4>
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
