
@model NetMVCBlogApp.Models.AdminDetailsModel

<div class="about">
    <div class="about-me">
        <h2>
            <span>About Me</span>
        </h2>
    </div>
    <div class="about-me-image">
        <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Image)" alt="@Model.Name profile image">
    </div>
    <div class="about-me-text">
        @{
            if (Model.AboutMe!=null)
            {
                if (Model.AboutMe.Length<108)
                {
                    <span>
                        @Model.AboutMe
                    </span>
                }
                else
                {
                    <span>
                        @Model.AboutMe.Substring(0,108)...
                    </span>
                }
            }
        }
        <a href="/About-Me">more</a>
    </div>
</div>

